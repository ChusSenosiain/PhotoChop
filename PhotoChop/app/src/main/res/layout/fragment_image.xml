<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="match_parent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/iv_image"
        android:scaleType="centerCrop"/>


    <LinearLayout
        android:id="@+id/image_data_holder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:background="@color/image_text_background"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingRight="16dp"
            android:paddingLeft="16dp"
            android:paddingTop="10dp">

            <es.molestudio.photochop.View.AppTextView
                android:id="@+id/image_name"
                style="@style/AppTextField.Regular.Medium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="lskdfhjlasdjf"
                android:textColor="@android:color/white"/>

            <es.molestudio.photochop.View.AppTextView
                android:id="@+id/image_date"
                style="@style/AppTextField.Regular.Medium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="dsadf kjahfdlkasd uhdliuhasd"
                android:textColor="@android:color/white"/>

        </LinearLayout>



        <LinearLayout
            android:id="@+id/action_buttons_holder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="right">


            <ImageView
                android:id="@+id/iv_share"
                style="@style/AppImageIcon.Medium"
                android:src="@drawable/ic_share_white_24dp"
                android:layout_margin="10dp"/>

            <ImageView
                android:id="@+id/iv_localize"
                style="@style/AppImageIcon.Medium"
                android:src="@drawable/ic_place_white_24dp"
                android:layout_margin="10dp"/>

            <ImageView
                android:id="@+id/iv_edit"
                style="@style/AppImageIcon.Medium"
                android:src="@drawable/ic_create_white_24dp"
                android:layout_margin="10dp"/>

            <ImageView
                android:id="@+id/iv_favorite"
                style="@style/AppImageIcon.Medium"
                android:src="@drawable/ic_favorite_white_24dp"
                android:layout_margin="10dp"/>


            <ImageView
                android:id="@+id/iv_delete"
                style="@style/AppImageIcon.Medium"
                android:src="@drawable/ic_delete_white_24dp"
                android:layout_margin="10dp"
                />

        </LinearLayout>

    </LinearLayout>


</RelativeLayout>