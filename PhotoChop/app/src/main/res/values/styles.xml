<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@color/background_window</item>
        <item name="actionBarStyle">@style/MyActionBar</item>
        <!-- Set AppCompatâ€™s color theming attrs -->
        <item name="colorPrimary">@color/primary_color</item>
        <item name="colorPrimaryDark">@color/dark_primary_color</item>
        <item name="colorAccent">@color/accent_color</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="actionModeBackground">@color/primary_color</item>
    </style>

    <!-- Full Screen theme -->
    <style name="Theme.AppCompat.NoActionBar.FullScreen" parent="@style/AppTheme">
        <item name="android:windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <!-- ActionBar styles -->
    <style name="MyActionBar"
           parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="titleTextStyle">@style/TitleBarTextColor</item>
    </style>


    <style name="TitleBarTextColor" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@android:color/white</item>
    </style>


    <!-- TextFields -->
    <style name="AppTextField" parent="AppTheme">
        <item name="android:textColor">@color/dark_grey</item>
    </style>

    <!-- Text Field regular -->
    <style name="AppTextField.Regular" parent="AppTextField">
        <item name="ats_textFont">regular</item>
    </style>

    <style name="AppTextField.Regular.Smallest" parent="AppTextField.Regular">
        <item name="android:textSize">12dp</item>
    </style>
    <style name="AppTextField.Regular.Small" parent="AppTextField.Regular">
        <item name="android:textSize">14dp</item>
    </style>

    <style name="AppTextField.Regular.Medium" parent="AppTextField.Regular">
        <item name="android:textSize">16dp</item>
    </style>

    <style name="AppTextField.Regular.Big" parent="AppTextField.Regular">
        <item name="android:textSize">19dp</item>
    </style>

    <style name="AppTextField.Regular.Biggest" parent="AppTextField.Regular">
        <item name="android:textSize">21dp</item>
    </style>

    <!--Text Field light -->
    <style name="AppTextField.Light" parent="AppTextField">
        <item name="ats_textFont">light</item>
    </style>

    <style name="AppTextField.Light.Smallest" parent="AppTextField.Light">
        <item name="android:textSize">12dp</item>
    </style>

    <style name="AppTextField.Light.Small" parent="AppTextField.Light">
        <item name="android:textSize">14dp</item>
    </style>

    <style name="AppTextField.Light.Medium" parent="AppTextField.Light">
        <item name="android:textSize">16dp</item>
    </style>

    <style name="AppTextField.Light.Big" parent="AppTextField.Light">
        <item name="android:textSize">19dp</item>
    </style>



    <!-- Edit text -->
    <style name="AppTextField.EditText" parent="AppTextField.Regular.Medium">
        <item name="android:background">@drawable/apptheme_edit_text</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:cursorVisible">false</item>
        <item name="android:textColorHint">@color/edit_text_hint</item>
        <item name="android:paddingRight">7dp</item>
        <item name="android:paddingLeft">7dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:gravity">left|bottom</item>
    </style>

    <!-- Button Text -->
    <style name="AppTextField.ButtonText" parent="AppTheme">
        <item name="ats_textFont">medium</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">15dp</item>
    </style>



    <!-- ImageViews -->
    <style name="AppImageView" parent="AppTheme">
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="AppImageView.Medium" parent="AppImageView">
        <item name="android:layout_height">60dp</item>
        <item name="android:layout_width">60dp</item>
    </style>


    <style name="AppImageIcon.Medium" parent="AppImageView">
        <item name="android:layout_height">24dp</item>
        <item name="android:layout_width">24dp</item>
        <item name="android:scaleType">centerCrop</item>
    </style>


    <style name="AppImageIcon.Big" parent="AppImageView">
        <item name="android:layout_height">28dp</item>
        <item name="android:layout_width">28dp</item>
        <item name="android:scaleType">centerCrop</item>
    </style>



    <style name="AppImageIcon.Medium.Grey" parent="AppImageIcon.Medium">
        <item name="android:tint">@color/icon_grey</item>
    </style>


    <!-- *************************************************************************
        ****************** DRAWER                ****************************
        *************************************************************************
   -->
    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
    </style>



    <!-- Floating action buttons -->
    <style name="menu_labels_style">
        <item name="android:background">@drawable/fab_label_background</item>
        <item name="android:textColor">@color/white</item>
    </style>


    <!-- Dividers -->

    <style name="Divider" parent="AppTheme">

        <item name="android:layout_height">0.5dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@color/divider</item>

    </style>


</resources>
