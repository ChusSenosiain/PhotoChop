<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@color/background_window</item>
        <item name="actionBarStyle">@style/MyActionBar</item>
        <!-- Set AppCompatâ€™s color theming attrs -->
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryDark">@color/color_primary_dark</item>
        <item name="colorAccent">@color/material_teal</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="actionModeBackground">@color/color_primary</item>
    </style>

    <style name="AppTheme.TextView" parent="AppTheme">
        <item name="android:textColor">@color/ligth_letters</item>
    </style>



    <!-- ActionBar styles -->
    <style name="MyActionBar"
           parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="titleTextStyle">@style/TitleBarTextColor</item>
    </style>


    <style name="TitleBarTextColor" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@android:color/white</item>
    </style>


    <!-- ImageViews -->
    <style name="AppImageView" parent="AppTheme">
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="AppImageView.Medium" parent="AppImageView">
        <item name="android:layout_height">60dp</item>
        <item name="android:layout_width">60dp</item>
    </style>


    <style name="AppImageIcon.Medium" parent="AppImageView">
        <item name="android:layout_height">24dp</item>
        <item name="android:layout_width">24dp</item>
        <item name="android:scaleType">centerCrop</item>
    </style>


    <!-- *************************************************************************
        ****************** DRAWER                ****************************
        *************************************************************************
   -->
    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
    </style>

</resources>
